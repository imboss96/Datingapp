VAPID_PUBLIC_KEY=REPLACE_WITH_YOUR_VAPID_PUBLIC_KEY
VAPID_PRIVATE_KEY=REPLACE_WITH_YOUR_VAPID_PRIVATE_KEY
VAPID_CONTACT=mailto:you@example.com

# NOTE: Do NOT commit real secret values. Use a secret manager or set
# real production values on the server (e.g., via environment variables).
# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dating-app

# CORS Configuration - Allow requests from your frontend
CORS_ORIGIN=http://localhost:3001
# For production: CORS_ORIGIN=https://your-frontend.vercel.app

# JWT Secret - Use a strong random string in production
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Google Auth (if using Google OAuth)
GOOGLE_AUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_AUTH_CLIENT_SECRET=your-client-secret

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# WebSocket Configuration (if needed)
WS_ORIGIN=http://localhost:3001
# For production: WS_ORIGIN=https://your-frontend.vercel.app
